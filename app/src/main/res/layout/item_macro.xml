<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    android:backgroundTint="@color/SearchBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/SearchBar">
        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunday"
            android:textColor="#FFC107"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/meal_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Meal Type"
            android:textColor="#FFC107"
            android:fontFamily="@font/roboto"
            android:textSize="16sp"
            android:paddingBottom="4dp"/>
        <TextView
            android:id="@+id/macro_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFC107"
            android:fontFamily="@font/roboto"
            android:textSize="14sp"
            android:paddingBottom="4dp"
            android:layout_marginTop="4dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/protein_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Protein: 0g"
            android:textSize="16sp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/carbs_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carbs: 0g"
            android:textSize="16sp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />
        <TextView
            android:id="@+id/fiber_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fiber: 0g"
            android:textSize="16sp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"/>


        <TextView
            android:id="@+id/fats_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fats: 0g"
            android:textSize="16sp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/calories_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories: 0 kcal"
            android:textSize="16sp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />
        <Button
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:background="@color/black"
            android:textColor="@color/white"
            android:layout_gravity="end"/>


    </LinearLayout>
</androidx.cardview.widget.CardView>
